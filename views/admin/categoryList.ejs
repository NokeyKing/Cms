<!DOCTYPE html>
<html>
  <head>
      <!-- 顶部公共css和js -->
      <% include top.ejs%>
      <!-- 顶部公共css和js -->
  </head>
  <body>
  <!-- 公共头部 -->
  <% include header.ejs%>
  <!-- 公共头部 -->

  <div class="ch-container">
          <div class="row">

              <!-- 左侧 -->
              <% include left.ejs%>
              <!-- 左侧 -->

              <div id="content" class="col-lg-10 col-sm-10">
                  <!-- 面包 -->
                  <div>
                      <ul class="breadcrumb">
                          <li>
                              <a href="/admin/">Home</a>
                          </li>
                          <li>
                              <a href="/admin/categoryList/">CategoryList</a>
                          </li>
                      </ul>
                  </div>
                  <!-- 面包 -->
                  <!-- 类别列表 -->
                  <div class="row">
                      <div class="box col-md-12">
                          <div class="box-inner">
                              <div class="box-header well" data-original-title="">
                                  <h2><i class="glyphicon glyphicon-user"></i> <%=title%></h2>

                                  <div class="box-icon">
                                      <a href="/admin/addCategory" style="color: #2fa4e7;clear: none;float: left;margin: 0 2px;height: 20px;width: 5px;margin-top: 1px;font-size: 12px;padding-top: 4px; margin-right: 10px;"><i class="glyphicon glyphicon-edit"></i></a>
                                      <a href="javascript:;" class="btn btn-minimize btn-round btn-default"><i class="glyphicon glyphicon-chevron-up"></i></a>
                                      <a href="javascript:;" class="btn btn-close btn-round btn-default"><i class="glyphicon glyphicon-remove"></i></a>
                                  </div>
                              </div>
                              <div class="box-content">
                                  <!-- 列表开始 -->
                                  <table class="table table-striped table-bordered bootstrap-datatable datatable responsive">
                                      <thead>
                                      <tr>
                                          <th>名称</th>
                                          <th>别名</th>
                                          <th>父级</th>
                                          <th>图片</th>
                                          <th>排序</th>
                                          <th>禁用</th>
                                          <th>显示</th>
                                          <th width="260">时间</th>
                                          <th>添加人</th>
                                          <th width="157">操作</th>
                                      </tr>
                                      </thead>
                                      <tbody>
                                      <%categoryList.forEach(function (data) {%>
                                      <tr>
                                          <td class="center"><%=data.name%></td>
                                          <td class="center"><%=data.columnName%></td>
                                          <td class="center"><%=data.parent%></td>
                                          <td class="center"><img src="<%=data.img%>" width="50" /></td>
                                          <td class="center"><%=data.orderby%></td>
                                          <td class="center"><%=data.status%></td>
                                          <td class="center"><%=data.show_index%></td>
                                          <td class="center"><%=data.createTime%></td>
                                          <td class="center"><%=data.person%></td>
                                          <td class="center">
                                              <a class="btn btn-info" href="/admin/editCategory/<%= data.columnName%>">
                                                  <i class="glyphicon glyphicon-edit icon-white"></i>
                                                  Edit
                                              </a>
                                              <a class="btn btn-danger" href="/admin/delCategory/<%= data.id%>">
                                                  <i class="glyphicon glyphicon-trash icon-white"></i>
                                                  Delete
                                              </a>
                                          </td>
                                      </tr>
                                      <%})%>
                                      </tbody>
                                  </table>
                              </div>
                          </div>
                      </div>
                      <!--/span-->

                  </div>
                  <!-- 类别列表 -->
              </div>
          </div>
          <% include footer.ejs%>
      </div>

  <!-- 底部公共css和js -->
  <% include bottom.ejs%>
  <!-- 底部公共css和js -->
  </body>
</html>
