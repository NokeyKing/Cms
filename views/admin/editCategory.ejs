<!DOCTYPE html>
<html>
<head>
    <!-- 顶部公共css和js -->
    <% include top.ejs%>
    <!-- 顶部公共css和js -->
</head>
<body>
<!-- 公共头部 -->
<% include header.ejs%>
<!-- 公共头部 -->

<div class="ch-container">
    <div class="row">

        <!-- 左侧 -->
        <% include left.ejs%>
        <!-- 左侧 -->

        <div id="content" class="col-lg-10 col-sm-10">
            <!-- 面包 -->
            <div>
                <ul class="breadcrumb">
                    <li>
                        <a href="/admin/">Home</a>
                    </li>
                    <li>
                        <a href="/admin/categoryList/">CategoryList</a>
                    </li>
                </ul>
            </div>
            <!-- 面包 -->
            <!-- 类别列表 -->

            <%- message %>

            <div class="row">
                <div class="box col-md-12">
                    <div class="box-inner">
                        <div class="box-header well" data-original-title="">
                            <h2><i class="glyphicon glyphicon-edit"></i> <%=title%></h2>

                            <div class="box-icon">
                                <!--<a href="#" class="btn btn-setting btn-round btn-default"><i class="glyphicon glyphicon-cog"></i></a>-->
                                <a href="#" class="btn btn-minimize btn-round btn-default"><i class="glyphicon glyphicon-chevron-up"></i></a>
                                <a href="#" class="btn btn-close btn-round btn-default"><i class="glyphicon glyphicon-remove"></i></a>
                            </div>
                        </div>
                        <div class="box-content">
                            <form role="form" method="post">
                                <div class="form-group">
                                    <label>类别名称</label>
                                    <input type="text" class="form-control" placeholder="输入类别名称" name="categoryName" value="<%=categoryOne.name%>" />
                                </div>
                                <div class="form-group">
                                    <label>类别别名,英文</label>
                                    <input type="text" class="form-control" placeholder="输入类别别名,英文" name="categoryColumnName" value="<%=categoryOne.columnName%>" />
                                </div>
                                <div class="form-group">
                                    <label>父类</label>
                                    <select name="categoryParent">
                                        <option value="root">顶级</option>
                                        <% categoryList.forEach(function (data) { %>
                                        <%if(data.columnName != categorySelf){%>
                                        <option value="<%=data.columnName%>"><%=data.name%></option>
                                        <%}%>
                                        <% }) %>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label>类别图片</label>
                                    <input type="text" class="form-control" placeholder="输入类别图片" name="categoryImg" value="<%=categoryOne.img%>" />
                                </div>
                                <div class="form-group">
                                    <label>排序</label>
                                    <input type="text" class="form-control" placeholder="输入排序数值,默认100" name="categoryOrderby" value="<%=categoryOne.orderby%>" />
                                </div>
                                <div class="form-group">
                                    <label>是否禁用</label>
                                    <select name="categoryStatus">
                                        <option value="1">是</option>
                                        <option value="0">否</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label>是否前台显示</label>
                                    <select name="categoryShowIndex">
                                        <option value="1">是</option>
                                        <option value="0">否</option>
                                    </select>
                                </div>
                                <button type="submit" class="btn btn-default">修改类别</button>
                            </form>
                        </div>
                    </div>
                </div>
                <!--/span-->

            </div>
            <!-- 类别列表 -->
        </div>
    </div>
    <% include footer.ejs%>
</div>

<!-- 底部公共css和js -->
<% include bottom.ejs%>
<!-- 底部公共css和js -->
</body>
</html>